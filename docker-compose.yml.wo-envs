version: '2'
services:
    app:
        network_mode: host
        restart: always
        build: ./autocert/app
        expose:
          - "8000"
        volumes:
          - /data/autocert:/data/autocert
        entrypoint: /usr/src/app/entrypoint.sh
    nginx:
        network_mode: host
        restart: always
        build: ./nginx
        ports:
          - "80:80"
        volumes_from:
          - app
        depends_on:
          - app
