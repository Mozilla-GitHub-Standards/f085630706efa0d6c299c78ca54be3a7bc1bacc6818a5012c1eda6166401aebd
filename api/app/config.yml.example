logging:
    version: 1
    disable_existing_loggers: true
    root:
        level: NOTSET
        handlers: [console]
    loggers:
        api:
            level: WARNING
            handlers: [console, logfile]
            propagate: false
    handlers:
        console:
            class: logging.StreamHandler
            stream: ext://sys.stdout
            formatter: simple
            level: WARNING
        logfile:
            class: logging.FileHandler
            filename: /var/tmp/auto-cert/api.log
            formatter: detail
            level: WARNING
    formatters:
        simple:
            format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
        detail:
            format: '%(asctime)s - %(levelname)s - File: %(filename)s - %(funcName)s() - Line: %(lineno)d -  %(message)s'
key:
    dirpath: /var/tmp/auto-cert
    key_size: 2048
    public_exponent: 65537
    encoding: PEM
csr:
    dirpath: /var/tmp/auto-cert
    validity: 1
    server_type: 2
    org_name: Mozilla
    org_addr1: 331 E Evelyn Ave
    org_city: Mountain View
    org_state: CA
    org_zip: 94041
    org_country: US
    org_contact_firstname: Scott
    org_contact_lastname: Idler
    org_contact_email: sidler@mozilla.com
    org_contact_telephone: 503.862.3533
providers:
    filepath: ~/auto-cert
    digicert:
        baseurl: https://www.digicert.com:443/services/v2
        apikey: 82_CHAR_APIKEY
destinations:
    zeus:
        baseurl: http://10.248.29.12:9070/api/tm/3.9
        apikey: 82_CHAR_APIKEY
