version: '2'
services:
    nginx:
        build: ./nginx
        restart: always
        ports:
          - "80:80"
        volumes_from:
          - api
        links:
          - api
    api:
        build: ./api
        restart: always
        ports:
          - "8000:8000"
        volumes:
          - /data/autocert:/data/autocert
        entrypoint: /usr/src/app/entrypoint.sh
